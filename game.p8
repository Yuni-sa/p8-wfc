-- stack --

function new_stack()
  return {
      data = {},

      push = function(self, val)
          add(self.data, val)
      end,

      pop = function(self)
          if #self.data > 0 then
              return deli(self.data, #self.data)
          end
          return nil
      end,

      peek = function(self)
          if #self.data > 0 then
              return self.data[#self.data]
          end
          return nil
      end,

      size = function(self)
          return #self.data
      end,

      contains = function(self, val)
          for i = 1, #self.data do
            if self.data[i] == val then
                  return true
              end
          end
          return false
      end
  }
end
